<h1>Listing levels</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @levels.each do |level| %>
  <tr>
    <td><%= level.name %></td>
    <td><%= link_to 'Show', level %></td>
    <td><%= link_to 'Edit', edit_assignment_level_path(@assignment, level) %></td>
    <td><%= link_to 'Destroy', assignment_level_path(@assignment, level), confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Download', level.level_file.url %></td>

  </tr>
<% end %>
</table>

