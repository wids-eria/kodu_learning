<h1>Listing levels</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @levels.each do |level| %>
  <tr>
    <td><%= level.name %></td>
    <td><%= level.user.first_name %> <% level.user.last_name %>
    <td><%= link_to 'Show', level %></td>
    <td><%= link_to 'Download', level.level_file.url %></td>

  </tr>
<% end %>
</table>

